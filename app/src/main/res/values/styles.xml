<resources>

    <!-- Base application theme. -->
    <!--app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- TODO: Revisar colores y tamanos  -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="blueStartsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/start_rate_full</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="yndSwitch" parent="Widget.Design.TextInputLayout">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="yndHeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="TextAppearance.Collapsed"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
    </style>

<!--    <style name="yndAdCard" parent="CardView.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">5dp</item>
    </style>-->

    <style name="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">3dp</item>

        <!--<item name="android:layout_marginLeft">@dimen/articulo_card_margin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/articulo_card_margin</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/articulo_card_margin</item>-->
        <!--<item name="android:layout_marginTop">0dp</item>-->
    </style>


    <style name="AdCard" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginRight">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginTop">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <!--<item name="android:layout_alignParentBottom">@dimen/articulo_card_margin</item>-->

    </style>
    <style name="IdeaCard" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginRight">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_tiny</item>
        <item name="android:layout_alignParentBottom">@dimen/articulo_card_margin</item>

    </style>


</resources>
