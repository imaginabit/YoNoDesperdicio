<resources>
    <!-- NavigationBaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TODO: Revisar colores y tamanos  -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="blueStartsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/start_rate_full</item>
        <item name="android:padding">0dip</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
        <item name="android:minWidth">100dip</item>

    </style>

    <style name="yndSwitch" parent="Widget.Design.TextInputLayout">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <!-- Google -->

    <style name="ThemeOverlay.NoTitleActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.DarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Create User -->
    <style name="AppTheme.CreateUser" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/create_user_color</item>
        <item name="colorPrimaryDark">@color/create_user_color</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="android:windowBackground">@color/create_user_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Messages -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="textAllCaps">false</item>
    </style>

    <style name="yndHeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextAppearance.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">3dp</item>
    </style>


    <style name="AdCard" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginRight">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginTop">@dimen/articulo_card_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <!--<item name="android:layout_alignParentBottom">@dimen/articulo_card_margin</item>-->

    </style>

    <style name="IdeaCard" parent="CardView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <!--<item name="android:layout_alignParentBottom">@dimen/articulo_card_margin</item>-->
    </style>


    <style name="yndTitleTextStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="yndDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_light</item>
        <item name="android:windowTitleStyle">@style/yndTitleTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecyclerView">
        <item name="android:background">@color/activity_background</item>
    </style>





</resources>
