<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/articulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:padding="0dp"
            android:layout_marginTop="0dp"
            >

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:id="@+id/anuncio_list_textos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.9"
                    >
                    <TextView
                        android:id="@+id/anuncio_list_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:paddingTop="@dimen/card_margin"
                        android:text="Titulo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/anuncio_list_localizacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/card_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="28080, Madrid"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:paddingBottom="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="0dp"
                        android:orientation="horizontal">
                        <CircleImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"

                            />
                        <TextView
                            android:id="@+id/anuncio_list_caducidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expira en 5 días"
                            android:enabled="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            />
                        <TextView
                        android:id="@+id/anuncio_list_distancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expira en 5 días"
                        android:enabled="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        />

                    </LinearLayout>
                    <!--<TextView-->
                        <!--android:id="@+id/anuncio_list_caducidad"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="0dp"-->
                        <!--android:text="Expira en 5 días"-->
                        <!--android:enabled="true"-->
                        <!--android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--android:layout_marginBottom="0dp"-->
                        <!--android:paddingBottom="0dp"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--/>-->
                </LinearLayout>

                <ImageView
                    android:id="@+id/otrafoto2"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="foto del articulo"

                    android:layout_marginLeft="0dp"
                    android:layout_weight="0.1"

                    android:scaleType="centerCrop"
                    android:src="@drawable/food"

                    />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

