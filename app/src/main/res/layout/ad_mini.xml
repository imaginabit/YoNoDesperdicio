<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ad_item"
    style="@style/IdeaCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!--style="@style/AdCard"-->
    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:id="@+id/ad_textos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:minHeight="100dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:paddingTop="@dimen/card_margin"
                android:text="Titulo"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="22dp"
                />

            <TextView
                android:id="@+id/ad_weight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1.5 Kg"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/status_image"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/circle_white"
                    />

                <TextView
                    android:id="@+id/ad_expiration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:text="lorem ipsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/secondary_text"
                    />

                <TextView
                    android:id="@+id/ad_distance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.4"
                    android:enabled="true"
                    android:gravity="right|bottom"
                    android:text="2.1 Km"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/secondary_text"

                    />

            </LinearLayout>
            <!--<TextView-->
            <!--android:id="@+id/anuncio_list_caducidad"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="0dp"-->
            <!--android:text="Expira en 5 dÃ­as"-->
            <!--android:enabled="true"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_marginBottom="0dp"-->
            <!--android:paddingBottom="0dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--/>-->
        </LinearLayout>

        <ImageView
            android:id="@+id/ad_image"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.35"
            android:adjustViewBounds="true"
            android:contentDescription="foto del articulo"
            android:scaleType="centerCrop"
            android:src="@drawable/brick_avatar"
            />


    </LinearLayout>


</android.support.v7.widget.CardView>

