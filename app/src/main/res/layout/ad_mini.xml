<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/ad_item"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="@dimen/articulo_card_margin"
android:layout_marginTop="6dp"
android:layout_marginBottom="6dp"
android:layout_marginEnd="@dimen/articulo_card_margin"
    >

<LinearLayout
    style="@style/Widget.CardContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:id="@+id/ad_textos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:minHeight="100dp"
        >
        <TextView
            android:id="@+id/ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingTop="@dimen/card_margin"
            android:text="Titulo"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/ad_weight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="1.5 Kg"
            android:textSize="18dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_image"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/acircle"
                android:tint="@color/ad_disponible"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/ad_expiration"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Expira en 5 días Expira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 díasExpira en 5 días"
                android:enabled="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/secondary_text"
                android:layout_gravity="bottom"
                />
            <TextView
                android:id="@+id/ad_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="2.1 Km"
                android:enabled="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:gravity="right|bottom"
                android:layout_gravity="bottom"
                android:textColor="@color/secondary_text"

                />

        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/anuncio_list_caducidad"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="0dp"-->
        <!--android:text="Expira en 5 días"-->
        <!--android:enabled="true"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_marginBottom="0dp"-->
        <!--android:paddingBottom="0dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--/>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:contentDescription="foto del articulo"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.35"
        android:scaleType="centerCrop"
        android:src="@drawable/food"
        />


</LinearLayout>


</android.support.v7.widget.CardView>

