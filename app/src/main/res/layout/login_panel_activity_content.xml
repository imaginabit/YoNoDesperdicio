<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".activities.LoginPanelActivity"
    android:background="@color/create_user_color"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/brick_avatar"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Debes iniciar sesión para continuar"
            android:textColor="@android:color/white"
        />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_panel_google_login_button"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="23dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/blue_square_selector"
            android:text="CONTINUAR CON GOOGLE"
            android:onClick="onClick"
            android:textStyle="bold"
        />


    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_panel_create_account_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/create_user_color"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/white_square_selector"
            android:text="CREAR CUENTA"
            android:onClick="onClick"
            android:textStyle="bold"
        />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_panel_login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/create_user_color"
            android:textAppearance="?android:textAppearanceSmall"
            android:background="@drawable/white_square_selector"
            android:textStyle="bold"
            android:text="INICIAR SESIÓN"
            android:onClick="onClick"
        />

    </LinearLayout>

</RelativeLayout>
