<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cardview_light_background"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/food"
        android:scaleType="centerCrop"
        android:contentDescription="@string/desc_imagen_anuncio"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        style="@style/CardView.Dark"
        android:orientation="vertical"
        >

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_title"

        />
        -->
        <EditText
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_title"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cantidad"
            android:hint="@string/label_cantidad"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:id="@+id/limite_recogida_fecha"
                android:hint="@string/label_limite_recogida_fecha"
                android:inputType="date"
                />

            <EditText
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:id="@+id/limite_recogida_hora"
                android:hint="@string/label_limite_recogida_hora"
                android:inputType="time"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:hint="@string/label_ciudad"
                android:id="@+id/ciudad"/>
            <EditText
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:hint="@string/label_codigo_postal"
                android:inputType="numberDecimal"
                android:id="@+id/codigo_postal"/>
        </LinearLayout>

        <Switch
            style="@style/Base.V12.Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar localizacion automatica"
            android:id="@+id/switch_localizacion_auto"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Anuncio"
        android:layout_gravity="center"
        android:textColor="@color/accent"
        android:background="@color/cardview_light_background"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />



</LinearLayout>